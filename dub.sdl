name "dialect"
description "IRC parsing library"
authors "JR"
copyright "Copyright Â© 2019, JR"
license "MIT"
targetType "library"
dflags "-dip25" "-dip1008"
libs "phobos2" platform="posix-dmd"

x:ddoxTool "scod"

sourcePaths "source"
importPaths "source"

dependency "lu:core" version="~>0.1.1"
dependency "lu:meld" version="~>0.1.1"

versions "FlagAsUpdated"

configuration "library" {
    // Mustn't be empty
    targetType "library"
}

configuration "twitch" {
    versions "TwitchSupport"
}

configuration "dev" {
    versions "TwitchSupport" "TwitchWarnings"
}

configuration "benchmark" {
    targetType "executable"
    mainSourceFile "source/dialect/main.d"
    buildType "unittest"
    versions "TwitchSupport"
    sourcePaths "source" "tests"
    importPaths "source" "tests"
}

configuration "unittest" {
    versions "TwitchSupport" "TwitchWarnings"
    sourcePaths "source" "tests"
    importPaths "source" "tests"
}
